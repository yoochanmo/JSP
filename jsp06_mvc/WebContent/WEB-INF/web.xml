<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>jsp06_mvc</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet-mapping>
  	<servlet-name>UsingFile</servlet-name>
  	<url-pattern>/file</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>UsingFile</servlet-name>
  	<servlet-class>com.lec.controller.ControllerUsingFile</servlet-class>
  	<init-param>
  		<param-name>controllerFile</param-name>
  		<param-value>/WEB-INF/commandHandler.properties</param-value>
  	</init-param>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>UsingURI</servlet-name>
  	<url-pattern>*.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>UsingURI</servlet-name>
  	<servlet-class>com.lec.controller.ControllerUsingURI</servlet-class>
  	<init-param>
  		<param-name>controllerURI</param-name>
  		<param-value>/WEB-INF/commandHandlerURI.properties</param-value>
  	</init-param>
  </servlet>
  
</web-app>